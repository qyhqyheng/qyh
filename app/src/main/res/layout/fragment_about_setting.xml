<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="@color/toolbar_blue"
        android:paddingLeft="@dimen/len_10"
        android:paddingRight="@dimen/len_10"
        android:paddingTop="@dimen/len_8">

        <ImageView
            android:id="@+id/iv_about_back"
            android:layout_width="@dimen/len_52"
            android:layout_height="@dimen/len_24"
            android:src="@mipmap/ic_back_view"
            android:layout_marginLeft="@dimen/len_6"
            android:scaleType="fitStart"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/len_10"/>
        <TextView
            android:id="@+id/tv_bluetooth_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/len_10"
            android:text="@string/My_About"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_300">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_300"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/len_16">

        <ImageView
            android:id="@+id/iv_about_ic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_diaplay_launcher"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/soft_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_about_ic"
            android:layout_marginTop="@dimen/len_14"
            android:textSize="@dimen/font_18"
            android:layout_gravity="center"
            android:textColor="@color/textDark"
            android:textColorHint="@color/textSecond"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/len_4"
        android:layout_marginRight="@dimen/len_4"
        android:layout_weight="2"
        android:orientation="vertical"
        android:paddingBottom="@dimen/len_8"
        android:paddingTop="@dimen/len_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/len_4"
            android:background="@color/white">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/len_4"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:text="@string/label_after_sales"
                android:textColor="@color/textDark"
                android:textColorHint="@color/textSecond"
                android:textSize="@dimen/len_18" />

            <TextView
                android:id="@+id/iv_parameter_into"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="center"
                android:text="0755-26068930-807"
                android:textColor="@color/textDark"
                android:textSize="@dimen/len_18"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="@dimen/len_2"
            android:layout_marginEnd="@dimen/len_8"
            android:layout_marginRight="@dimen/len_8"
            android:layout_marginStart="@dimen/len_4"
            android:layout_marginTop="@dimen/len_2"
            android:background="@color/black_alpha_32"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/len_4"
            android:visibility="invisible">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/len_2"
                android:layout_marginLeft="@dimen/len_4"
                android:layout_marginRight="@dimen/len_2"
                android:layout_marginStart="@dimen/len_4"
                android:layout_weight="1"
                android:paddingBottom="@dimen/len_8"
                android:paddingTop="@dimen/len_8"
                android:text="@string/label_feedback"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/textDark"
                android:textSize="@dimen/len_18" />

            <ImageView
                android:id="@+id/iv_btName_into"
                android:layout_width="@dimen/len_52"
                android:layout_height="@dimen/len_32"
                android:paddingBottom="@dimen/len_8"
                android:paddingTop="@dimen/len_8"
                android:src="@mipmap/ic_enter_view" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="@dimen/len_2"
            android:layout_marginEnd="@dimen/len_8"
            android:layout_marginRight="@dimen/len_8"
            android:layout_marginStart="@dimen/len_4"
            android:layout_marginTop="@dimen/len_2"
            android:background="@color/black_alpha_32"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/len_4"
            android:visibility="invisible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/len_2"
                android:layout_marginLeft="@dimen/len_10"
                android:layout_marginRight="@dimen/len_2"
                android:layout_marginStart="@dimen/len_4"
                android:layout_weight="1"
                android:paddingBottom="@dimen/len_8"
                android:paddingTop="@dimen/len_8"
                android:text="@string/label_help"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/textDark"
                android:textSize="@dimen/len_18" />

            <ImageView
                android:layout_width="@dimen/len_52"
                android:layout_height="@dimen/len_32"
                android:paddingBottom="@dimen/len_8"
                android:paddingTop="@dimen/len_8"
                android:src="@mipmap/ic_enter_view" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_20"
            android:background="@color/grey_300"
            android:visibility="invisible"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/len_4"
            android:visibility="invisible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/len_2"
                android:layout_marginLeft="@dimen/len_10"
                android:layout_marginRight="@dimen/len_2"
                android:layout_marginStart="@dimen/len_4"
                android:layout_weight="1"
                android:paddingBottom="@dimen/len_8"
                android:paddingTop="@dimen/len_8"
                android:text="@string/label_get_version"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/textDark"
                android:textSize="@dimen/len_18" />

            <ImageView
                android:id="@+id/iv_alignment_into"
                android:layout_width="@dimen/len_52"
                android:layout_height="@dimen/len_32"
                android:paddingBottom="@dimen/len_8"
                android:paddingTop="@dimen/len_8"
                android:src="@mipmap/ic_enter_view" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="@dimen/len_2"
            android:layout_marginEnd="@dimen/len_8"
            android:layout_marginRight="@dimen/len_8"
            android:layout_marginStart="@dimen/len_4"
            android:layout_marginTop="@dimen/len_2"
            android:background="@color/black_alpha_32"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="invisible">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="copyright@justec"
                android:textColorHint="@color/grey_600"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:layout_marginBottom="@dimen/len_8"
                android:textSize="@dimen/font_16"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>