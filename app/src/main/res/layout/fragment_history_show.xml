<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.justec.pillowalcohol.fragment.history.HistoryFragment">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="69dp"
        android:background="@color/toolbar_blue"
        android:paddingLeft="@dimen/len_10"
        android:paddingRight="@dimen/len_10"
        android:paddingTop="@dimen/len_8">

        <ImageView
            android:id="@+id/iv_history_back"
            android:layout_width="33dp"
            android:layout_height="18dp"
            android:src="@mipmap/ic_back_view"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/len_12"
            />
        <TextView
            android:id="@+id/tv_history_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/len_10"
            android:layout_toRightOf="@id/iv_history_back"
            android:layout_marginLeft="5dp"
            android:text="@string/Return"
            android:textColor="@color/white"
            android:textSize="@dimen/len_18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/len_10"
            android:text="@string/History"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/len_10"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/show_history_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>
</LinearLayout>

