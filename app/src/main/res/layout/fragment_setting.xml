<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_gravity="top"
        android:background="@color/toolbar_blue"
        android:paddingLeft="@dimen/len_10"
        android:paddingRight="@dimen/len_10"
        android:paddingTop="@dimen/len_8">
        <ImageView
            android:id="@+id/iv_setting_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_avatar"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/len_12"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_setting_background"
            android:text="Justec"
            android:textSize="@dimen/font_24"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/mfragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--android:background="@drawable/bg_account_input"-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/len_4"
                android:layout_marginRight="@dimen/len_4"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/len_8"
                android:paddingTop="@dimen/len_8">

                <LinearLayout
                    android:id="@+id/ll_parameter_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/len_4">
                    <ImageView
                        android:layout_width="@dimen/len_20"
                        android:layout_height="@dimen/len_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/len_8"
                        android:layout_marginRight="@dimen/len_8"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_parameter_setting"
                        android:tint="@color/primaryColor"
                        />

                    <TextView
                        android:id="@+id/tv_parameter_setting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/len_2"
                        android:layout_marginLeft="@dimen/len_4"
                        android:layout_marginRight="@dimen/len_2"
                        android:layout_marginStart="@dimen/len_4"
                        android:background="@null"
                        android:gravity="left"
                        android:paddingBottom="@dimen/len_8"
                        android:paddingTop="@dimen/len_8"
                        android:text="@string/label_parameter_setting"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textSecond"
                        android:textSize="@dimen/font_14"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/iv_parameter_into"
                        android:layout_width="@dimen/len_52"
                        android:layout_height="@dimen/len_32"
                        android:src="@mipmap/ic_enter_view"
                        android:paddingBottom="@dimen/len_8"
                        android:paddingTop="@dimen/len_8"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="@dimen/len_2"
                    android:layout_marginEnd="@dimen/len_8"
                    android:layout_marginLeft="@dimen/len_44"
                    android:layout_marginRight="@dimen/len_8"
                    android:layout_marginStart="@dimen/len_44"
                    android:layout_marginTop="@dimen/len_2"
                    android:background="@color/black_alpha_32" />

                <LinearLayout
                    android:id="@+id/ll_btName_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/len_4">

                    <ImageView
                        android:layout_width="@dimen/len_20"
                        android:layout_height="@dimen/len_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/len_8"
                        android:layout_marginRight="@dimen/len_8"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_bluetooth_setting"
                        android:tint="@color/primaryColor" />

                    <TextView
                        android:id="@+id/tv_name_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/len_2"
                        android:layout_marginLeft="@dimen/len_4"
                        android:layout_marginRight="@dimen/len_2"
                        android:layout_marginStart="@dimen/len_4"
                        android:background="@null"
                        android:paddingBottom="@dimen/len_8"
                        android:paddingTop="@dimen/len_8"
                        android:text="@string/label_bluetooth_name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textSecond"
                        android:textSize="@dimen/font_14"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/iv_btName_into"
                        android:layout_width="@dimen/len_52"
                        android:layout_height="@dimen/len_32"
                        android:paddingBottom="@dimen/len_8"
                        android:paddingTop="@dimen/len_8"
                        android:src="@mipmap/ic_enter_view" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="@dimen/len_2"
                    android:layout_marginEnd="@dimen/len_8"
                    android:layout_marginLeft="@dimen/len_44"
                    android:layout_marginRight="@dimen/len_8"
                    android:layout_marginStart="@dimen/len_44"
                    android:layout_marginTop="@dimen/len_2"
                    android:background="@color/black_alpha_32" />

                <LinearLayout
                    android:id="@+id/ll_alignment_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/len_4">

                    <ImageView
                        android:layout_width="@dimen/len_20"
                        android:layout_height="@dimen/len_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/len_8"
                        android:layout_marginRight="@dimen/len_8"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_calibration_setting"
                        android:tint="@color/primaryColor" />

                    <TextView
                        android:id="@+id/tv_alignment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/len_2"
                        android:layout_marginLeft="@dimen/len_4"
                        android:layout_marginRight="@dimen/len_2"
                        android:layout_marginStart="@dimen/len_4"
                        android:background="@null"
                        android:paddingBottom="@dimen/len_8"
                        android:paddingTop="@dimen/len_8"
                        android:text="@string/label_alignment"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textSecond"
                        android:textSize="@dimen/font_14"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/iv_alignment_into"
                        android:layout_width="@dimen/len_52"
                        android:layout_height="@dimen/len_32"
                        android:src="@mipmap/ic_enter_view"
                        android:paddingBottom="@dimen/len_8"
                        android:paddingTop="@dimen/len_8"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="@dimen/len_2"
                    android:layout_marginEnd="@dimen/len_8"
                    android:layout_marginLeft="@dimen/len_44"
                    android:layout_marginRight="@dimen/len_8"
                    android:layout_marginStart="@dimen/len_44"
                    android:layout_marginTop="@dimen/len_2"
                    android:background="@color/black_alpha_32" />

                <LinearLayout
                    android:id="@+id/ll_product_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/len_4">

                    <ImageView
                        android:layout_width="@dimen/len_20"
                        android:layout_height="@dimen/len_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/len_8"
                        android:layout_marginRight="@dimen/len_8"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_product_setting"
                        android:tint="@color/primaryColor" />

                    <TextView
                        android:id="@+id/tv_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/len_2"
                        android:layout_marginLeft="@dimen/len_4"
                        android:layout_marginRight="@dimen/len_2"
                        android:layout_marginStart="@dimen/len_4"
                        android:background="@null"
                        android:paddingBottom="@dimen/len_8"
                        android:paddingTop="@dimen/len_8"
                        android:text="@string/label_product"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textSecond"
                        android:textSize="@dimen/font_14"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/iv_product_into"
                        android:layout_width="@dimen/len_52"
                        android:layout_height="@dimen/len_32"
                        android:src="@mipmap/ic_enter_view"
                        android:paddingBottom="@dimen/len_8"
                        android:paddingTop="@dimen/len_8"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="@dimen/len_2"
                    android:layout_marginEnd="@dimen/len_8"
                    android:layout_marginLeft="@dimen/len_44"
                    android:layout_marginRight="@dimen/len_8"
                    android:layout_marginStart="@dimen/len_44"
                    android:layout_marginTop="@dimen/len_2"
                    android:background="@color/black_alpha_32" />

                <LinearLayout
                    android:id="@+id/ll_about_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/len_4">

                    <ImageView
                        android:layout_width="@dimen/len_20"
                        android:layout_height="@dimen/len_20"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/len_8"
                        android:layout_marginRight="@dimen/len_8"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_about_setting"
                        android:tint="@color/primaryColor" />

                    <TextView
                        android:id="@+id/tv_about_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/len_2"
                        android:layout_marginLeft="@dimen/len_4"
                        android:layout_marginRight="@dimen/len_2"
                        android:layout_marginStart="@dimen/len_4"
                        android:background="@null"
                        android:paddingBottom="@dimen/len_8"
                        android:paddingTop="@dimen/len_8"
                        android:text="@string/label_about_device"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/textPrimary"
                        android:textColorHint="@color/textSecond"
                        android:textSize="@dimen/font_14"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/iv_about_product_into"
                        android:layout_width="@dimen/len_52"
                        android:layout_height="@dimen/len_32"
                        android:src="@mipmap/ic_enter_view"
                        android:paddingBottom="@dimen/len_8"
                        android:paddingTop="@dimen/len_8"
                        />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="@dimen/len_2"
                    android:layout_marginEnd="@dimen/len_8"
                    android:layout_marginLeft="@dimen/len_44"
                    android:layout_marginRight="@dimen/len_8"
                    android:layout_marginStart="@dimen/len_44"
                    android:layout_marginTop="@dimen/len_2"
                    android:background="@color/black_alpha_32" />

            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>